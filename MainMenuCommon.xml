<?xml version="1.0" encoding="UTF-8"?>

<!-- Please note, that the files defining the main menu (ie, MainMenuCommon,
     MainMenuMaster, and MainMenuEscape)
     can exist in $HOME/houdiniX.Y/ directory and will supplement
     the original definitions found in $HFS/houdini/ -->

<mainMenu>
    <menuBar>
        <subMenu id="im_submenu">

            <label>IM</label>

            <scriptItem id="keycam">
                <label>keycam</label>
                <scriptCode>
                <![CDATA[
import im_menu_utils
im_menu_utils.toggle_keycam()
                ]]>
                </scriptCode>
            </scriptItem>

            <scriptItem id="color_palette">
                <label>Color Palette</label>
                <scriptCode>
                <![CDATA[
import im_menu_utils
im_menu_utils.open_color_chooser()
                ]]>
                </scriptCode>
            </scriptItem>

            <separatorItem/>

            <scriptItem id="reload_keycam">
                <label>Reload IM View</label>
                <scriptCode>
                <![CDATA[
import im_menu_utils
im_menu_utils.reload_keycam()
                ]]>
                </scriptCode>
            </scriptItem>

            <scriptItem id="reload_viewport_color_schemes">
                <label>Reload Viewport Color Schemes</label>
                <scriptCode>
                <![CDATA[
import im_menu_utils
im_menu_utils.reload_viewport_color_schemes()
                ]]>
                </scriptCode>
            </scriptItem>

            <scriptItem id="update_main_menu">
                <label>Update Main Menu</label>
                <scriptCode>
                <![CDATA[
import im_menu_utils
im_menu_utils.update_main_menu()
                ]]>
                </scriptCode>
            </scriptItem>

        </subMenu>
    </menuBar>
</mainMenu>
